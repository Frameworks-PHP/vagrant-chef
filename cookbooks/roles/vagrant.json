{
  "name": "vagrant",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "vagrant instance, responsible for deploying a vm for a developer",
  "override_attributes": {
    "box_name": "vagrant",
    "mysql": {
      "server_root_password": "bananas"
    },
    "authorization": {
      "sudo": { "users": [ "deploy", "vagrant" ] }
    },
    "nginx": {
      "worker_connections": 768,
      "keepalive_timeout": 2
    }
  },
  "default_attributes": {},
  "run_list": [
    "recipe[system::update]",
    "recipe[hostname::default]",
    "recipe[percona::client]",
    "recipe[percona::server]",
    "recipe[redis::install]",
    "recipe[memcached::install]",
    "recipe[nginx::server]",
    "recipe[php::install]",
    "recipe[cakephp::setup]"
  ]
}